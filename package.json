{
  "name": "@1stg/configs",
  "version": "0.0.0",
  "description": "Personal but Shareable Configurations for all 1stG.me projects.",
  "repository": "git@github.com:1stG/configs.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check": "run-p check:*",
    "check:eslint": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "check:stylelint": "stylelint-config-prettier-check",
    "check:tslint": "tslint-config-prettier-check ./tslint.json",
    "dev": "DEBUG=r:* r -i $PWD/packages/rollup-config/config -w",
    "lint": "run-p lint:**",
    "lint:es": "eslint . --ext js,jsx,md,mdx,ts,tsx,vue -f friendly",
    "lint:style:css": "stylelint --config stylelint.common.js tests/*.{css,less}",
    "lint:style:scss": "stylelint tests/*.{scss,vue}",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc",
    "test": "jest"
  },
  "devDependencies": {
    "@angular/core": "^8.2.8",
    "@babel/core": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@pkgr/imagemin": "^0.1.0",
    "@pkgr/rollup": "^0.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.3",
    "@types/unist": "^2.0.3",
    "browserslist": "^4.7.0",
    "eslint": "^6.5.1",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "prettier": "^1.18.2",
    "react": "^16.10.1",
    "rollup": "^1.22.0",
    "stylelint": "^11.0.0",
    "ts-jest": "^24.1.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "vue": "^2.6.10",
    "webpack": "^4.41.0"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "lib",
    "node_modules",
    "CHANGELOG.md",
    "!.*.js"
  ],
  "prettier": "@1stg/prettier-config",
  "stylelint": {
    "extends": "@1stg/stylelint-config/scss",
    "ignoreFiles": "*.less"
  }
}
