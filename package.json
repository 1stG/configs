{
  "name": "@1stg/configs",
  "version": "0.0.0",
  "description": "Personal but Shareable Configurations for all 1stG.me projects.",
  "repository": "git@github.com:1stG/configs.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check:eslint": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "check:stylelint": "stylelint-config-prettier-check",
    "check:tslint": "tslint-config-prettier-check ./tslint.json",
    "check": "run-p check:*",
    "lint:es": "cross-env EFF_NO_LINK_RULES=true eslint . --ext js,jsx,md,mdx,ts,tsx,vue -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:style:css": "stylelint --config stylelint.common.js test/*.{css,less}",
    "lint:style:scss": "stylelint test/*.{scss,vue}",
    "lint:style": "run-p lint:style:*",
    "lint": "run-p lint:*",
    "test": "jest",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "@types/react": "^16.9.2",
    "@types/unist": "^2.0.3",
    "browserslist": "^4.7.0",
    "builtin-modules": "^3.1.0",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-formatter-friendly": "^7.0.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "rollup": "^1.20.3",
    "stylelint": "^10.1.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2",
    "vue": "^2.6.10"
  },
  "browserslist": [
    "extends @1stg/browserslist-config",
    "> 0%"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintIgnore": [
    "CHANGELOG.md",
    "packages/rollup-config/cjs.js",
    "packages/rollup-config/es2015.js",
    "packages/rollup-config/esm.js"
  ],
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "stylelint": {
    "extends": "@1stg/stylelint-config/scss",
    "ignoreFiles": "*.less"
  }
}
