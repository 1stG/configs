{
  "name": "@1stg/configs",
  "version": "0.0.0",
  "description": "Personal but Shareable Configurations for all 1stG.me projects.",
  "repository": "git@github.com:1stG/configs.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check:eslint": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "check:stylelint": "stylelint-config-prettier-check",
    "check:tslint": "tslint-config-prettier-check ./tslint.json",
    "check": "run-p check:*",
    "lint:es": "eslint . --ext js,jsx,mdx,ts,tsx,vue",
    "lint:ts": "tslint -p . -t stylish",
    "lint:style:css": "stylelint --config @1stg/stylelint-config test/*.{css,less}",
    "lint:style:scss": "stylelint --config @1stg/stylelint-config/scss test/*.{scss,vue}",
    "lint:style": "run-p lint:style:*",
    "lint": "run-p lint:*",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "@types/react": "^16.9.2",
    "commitlint": "^8.1.0",
    "eslint": "^6.2.2",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "stylelint": "^10.1.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2",
    "vue": "^2.6.10"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@1stg/prettier-config",
  "stylelint": {
    "extends": "@1stg/stylelint-config/scss",
    "ignoreFiles": "*.less"
  }
}
