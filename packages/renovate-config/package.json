{
  "name": "@1stg/renovate-config",
  "version": "1.0.0",
  "description": "Personal but Shareable Renovate Configuration for all 1stG.me projects.",
  "repository": "git+https://github.com/1stG/configs.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "schedule:monthly"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      },
      "postUpdateOptions": [
        "npmDedupe",
        "yarnDedupeFewer"
      ],
      "rangeStrategy": "bump"
    }
  }
}
